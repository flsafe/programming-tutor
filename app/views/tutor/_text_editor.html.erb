<% content_for :head do %>
	<%= javascript_include_tag '/edit_area/edit_area/edit_area_full' %>
	<script type="text/javascript">
		editAreaLoader.init({
		id : "textarea_1"		       
		,syntax: "c"			         
		,start_highlight: true		 
		,allow_toggle: <%= ENV['RAILS_ENV'] != 'production' ? true : false %>
		,toolbar: "undo, redo, help"
	});
	</script>
<% end %>

<% form_tag "/tutor/grade/#{@exercise.id}", :id=>'editor' do %>
	<%= text_area_tag :textarea_1, editor_content || "", :name=>"code", :rows=>18, :cols=>80 %>
	
	<%= submit_to_remote "check_syntax",'Check Syntax', :url=>{:action=>'check_syntax', :id=>@exercise}, 
				:before=>"$('textarea_1').setValue(editAreaLoader.getValue('textarea_1'))" %>
				
	<%= submit_tag "Submit Solution" %>
<% end %>
