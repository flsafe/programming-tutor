<% content_for :head do %>
	<%= javascript_include_tag '/edit_area/edit_area/edit_area_full' %>
	<script type="text/javascript">
		editAreaLoader.init({
		id : "textarea_1"		       
		,syntax: "c"			         
		,start_highlight: true		 
		,allow_toggle: <%= ENV['RAILS_ENV'] != 'production' ? true : false %>
		,tool_bar: "undo, redo, syntax_selection"
	});
	</script>
<% end %>

<% form_tag :action=>"grade", :id=>@exercise do %>
	<%= text_area_tag :textarea_1, nil, :name=>"code", :rows=>18, :cols=>80 %>
	<%= submit_to_remote "check_syntax",
				'Check Syntax', 
				:url=>{:action=>'check_syntax', :id=>@exercise}, 
				:update=>'syntax', 
				:before=>"$('textarea_1').update(editAreaLoader.getValue('textarea_1'))" %>
	<%= submit_tag "Submit Solution" %>
<% end %>