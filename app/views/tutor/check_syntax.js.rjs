message = case @status
  when :job_enqueued  then "checking..."
  when :duplicate_job then "already checking!"
  when :exercise_dne  then "an error occured!"
end

page.replace_html :message, message
page << "keepPolling = true"
page.select("#polling").each do |e|
  e.replace(periodically_call_remote(:url=>{:action=>'syntax_status', :id=>@exercise.id}, :condition=>'keepPolling == true')) 
end




