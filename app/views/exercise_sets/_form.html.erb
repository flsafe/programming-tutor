<% form_for @exercise_set do |f|%>

  <%= f.label :finished, "Finished and display?" %>
  <%= f.check_box :finished, {}, 1, 0 %><br/><br/>

  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>

  <%= f.label :description %><br/>
  <%= f.text_area :description %><br/>

  <table>
    <tr><th>Set</th></tr>
    <%= render :partial=>"exercise", :collection=>@exercise_set.exercises %>
  </table>

	<%= submit_tag 'Submit'  %>
<% end %>
