<div id="header" class="column span-24">
	
	<div class="column span-8 last">
		<h2 id="app-name"><%= link_to "Blueberry Tree", show_menu? ? current_user_home : root_url %></h2>
	</div>
	
	<div id="header-nav" class="column span-16 last">
		<ul>
			<% if current_user_session_and_not_anonymous and show_menu?%>
					<li><%= link_to("#{current_user.username}", :controller=>:users, :action=>:show_me)%></li>
					<li><%= link_to("Logout", logout_path)%></li>
				<% else%>
					<li> <%= link_to 'Motivation', :controller=>:motivation %></li>
					<li> <%= link_to 'Pricing and Sign Up', :controller=>:users, :action=>:new %> </li>
					<li> <%= link_to 'Login', login_path %> </li>
			<% end %>
		</ul>
	</div>
	
</div>
